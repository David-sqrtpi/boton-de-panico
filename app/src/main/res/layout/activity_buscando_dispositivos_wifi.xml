        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Permanecer"
        app:layout_constraintEnd_toEndOf="@+id/onOffAutoWifi"
        app:layout_constraintStart_toStartOf="@+id/onOffAutoWifi"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/onOffAutoWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:onClick="onClickOnOffCambioAutomatico"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/alarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="#166265"
        android:onClick="onClickAlarma"
        android:text="Activar alarma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <Button
